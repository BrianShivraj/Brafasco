    <type name="Wyomind\StoreLocator\Ui\Modifier\DataProvider\SourceDataProvider">
        <arguments>
            <argument name="imageUploader" xsi:type="object">Wyomind\StoreLocator\Model\ImageUpload</argument>
        </arguments>
    </type>

    <type name="Wyomind\StoreLocator\Controller\Adminhtml\Source\Image\Upload">
        <arguments>
            <argument name="imageUploader" xsi:type="object">Wyomind\StoreLocator\Model\ImageUpload</argument>
        </arguments>
    </type>

    <preference for="Magento\InventoryAdminUi\Ui\DataProvider\SourceDataProvider"
                type="Wyomind\StoreLocator\Ui\Modifier\DataProvider\SourceDataProvider"/>

    <preference for="\Magento\Inventory\Model\ResourceModel\Source\Collection"
                type="Wyomind\StoreLocator\Model\ResourceModel\Source\Grid\Collection"/>

    <virtualType name="Wyomind\StoreLocator\Model\ImageUpload" type="Magento\Catalog\Model\ImageUploader">
        <arguments>
            <argument name="baseTmpPath" xsi:type="string">stores/tmp/</argument>
            <argument name="basePath" xsi:type="string">stores/</argument>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="png" xsi:type="string">png</item>
            </argument>
        </arguments>
    </virtualType>

</config>
