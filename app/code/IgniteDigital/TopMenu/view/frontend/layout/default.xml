<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
      <referenceBlock name="catalog.topnav">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">IgniteDigital_TopMenu::html/topmenu.phtml</argument>
            </action>
            <block class="IgniteDigital\TopMenu\Block\Html\CustomLink" name="topmenu.specials.link" as="topmenu-specials-link">
              <arguments>
                  <argument name="label" xsi:type="string">Specials</argument>
                  <argument name="path" xsi:type="string">flyer-specials</argument>
                  <argument name="attributes" xsi:type="array">
                      <item name="class" xsi:type="string">level-top ui-corner-all</item>
                  </argument>
              </arguments>
          </block>
          <block class="IgniteDigital\TopMenu\Block\Html\CustomLink" name="topmenu.catalogue.link" as="topmenu-catalogue-link">

                          <arguments>
              <argument name="label" xsi:type="string">Digital Catalogue</argument>
              <argument name="path" xsi:type="string">https://catalogue.brafasco.com/</argument>
              <argument name="attributes" xsi:type="array">
                  <item name="class" xsi:type="string">level-top ui-corner-all</item>
              </argument>
          </arguments>
          </block>
          <block class="IgniteDigital\TopMenu\Block\Html\CustomLink" name="topmenu.suppliers.link" as="topmenu-suppliers-link">
            <arguments>
                <argument name="label" xsi:type="string">Suppliers</argument>
                <argument name="path" xsi:type="string">suppliers</argument>
                <argument name="attributes" xsi:type="array">
                    <item name="class" xsi:type="string">level-top ui-corner-all</item>
                </argument>
            </arguments>
        </block>
        <block class="IgniteDigital\TopMenu\Block\Html\CustomLink" name="topmenu.locations.link" as="topmenu-locations-link">
          <arguments>
              <argument name="label" xsi:type="string">Locations</argument>
              <argument name="path" xsi:type="string">locations</argument>
              <argument name="attributes" xsi:type="array">
                  <item name="class" xsi:type="string">level-top ui-corner-all</item>
              </argument>
          </arguments>
      </block>
            <block class="IgniteDigital\TopMenu\Block\Html\CustomLink" as="topmenu-aboutus-link" name="topmenu.aboutus.link">
                <arguments>
                    <argument name="label" xsi:type="string">About</argument>
                    <argument name="path" xsi:type="string">about-us</argument>
                    <argument name="attributes" xsi:type="array">
                        <item name="class" xsi:type="string">level-top ui-corner-all</item>
                    </argument>
                </arguments>
            </block>
            <block class="IgniteDigital\TopMenu\Block\Html\CustomLink" name="topmenu.carrers.link" as="topmenu-carrers-link">
              <arguments>
                  <argument name="label" xsi:type="string">Contact</argument>
                  <argument name="path" xsi:type="string">contact</argument>
                  <argument name="attributes" xsi:type="array">
                      <item name="class" xsi:type="string">level-top ui-corner-all</item>
                  </argument>
              </arguments>
          </block>
            <block class="IgniteDigital\TopMenu\Block\Html\CustomLink" name="topmenu.contact.link" as="topmenu-contact-link">

                <arguments>
                    <argument name="label" xsi:type="string">Careers</argument>
                    <argument name="path" xsi:type="string">careers</argument>
                    <argument name="attributes" xsi:type="array">
                        <item name="class" xsi:type="string">level-top ui-corner-all</item>
                    </argument>
                </arguments>
            </block>
         </referenceBlock>
    </body>
</page>
