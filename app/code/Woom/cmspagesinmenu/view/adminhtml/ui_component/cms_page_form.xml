<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="menu">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Menu</item>
                <item name="sortOrder" xsi:type="number">5</item>
            </item>
        </argument>
        <field name="is_in_menu">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="source" xsi:type="string">page</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                    <item name="default" xsi:type="string">0</item>
                    <item name="label" xsi:type="string" translate="true">Include in Menu</item>
                </item>
            </argument>
        </field>
        <field name="menu_label">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">page</item>
                    <item name="label" xsi:type="string" translate="true">Menu Label</item>
                    <item name="dataScope" xsi:type="string">menu_label</item>
                    <item name="imports" xsi:type="array">
                        <item name="visible" xsi:type="string">${ $.parentName}.is_in_menu:checked</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="menu_add_type">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Woom\CmsPagesInMenu\Model\Source\MenuAddType</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">page</item>
                    <item name="label" xsi:type="string" translate="true">Add to Menu</item>
                    <item name="imports" xsi:type="array">
                        <item name="visible" xsi:type="string">${ $.parentName}.is_in_menu:checked</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="menu_add_category_id">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Woom\CmsPagesInMenu\Model\Source\Category</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">40</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">page</item>
                    <item name="label" xsi:type="string" translate="true">Before / After Category</item>
                    <item name="imports" xsi:type="array">
                        <item name="visible" xsi:type="string">${ $.parentName}.is_in_menu:checked</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>