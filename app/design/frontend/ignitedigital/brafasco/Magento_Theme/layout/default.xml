<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.panel">
          <container htmlClass="top-bar" htmlTag="div" name="branches1">
          <block class="Magento\Cms\Block\Block" name="top-pro" before ="logo">
              <arguments>
                  <argument name="block_id" xsi:type="string">header_tag_line</argument>
              </arguments>

      </block>
      </container>
        </referenceContainer>
              <referenceBlock name="logo">
            <arguments>
                <argument name="logo_img_width" xsi:type="number">234</argument>
                <argument name="logo_img_height" xsi:type="number">76</argument>
                 <argument name="logo_alt" xsi:type="string">Brafasco HD Supply</argument>
            </arguments>
        </referenceBlock>

        <referenceBlock name="report.bugs" remove="true"/>
       <referenceBlock name="minicart" remove="true"/>
       <referenceBlock name="form.subscribe" remove="true"/>
       <referenceBlock name="register-link" remove="true" />
        <referenceBlock name="authorization-link" remove="true" />
        <referenceBlock name="wish-list-link" remove="true" />
        <referenceBlock name="my-account-link" remove="true" />
        <referenceBlock name="top.search" remove="true" />

   <referenceContainer name="page.top">
     <container htmlClass="home-special" htmlTag="div" name="branches">
           <block class="Magento\Cms\Block\Block" name="home-specials" before="breadcrumbs">
               <arguments>
                   <argument name="block_id" xsi:type="string">home-specials</argument>
               </arguments>
           </block>
        </container>
       </referenceContainer>
  <referenceContainer name="header-wrapper">
    <container htmlClass="header-social" htmlTag="div" name="header-1">
        <block class="Magento\Cms\Block\Block" name="header-phone" after="minicart">
            <arguments>
                <argument name="block_id" xsi:type="string">header-phone</argument>
            </arguments>
        </block>
    </container>
     </referenceContainer>
     <referenceContainer name="header-wrapper">
       <container htmlClass="header-social" htmlTag="div" name="header-2">
           <block class="Magento\Cms\Block\Block" name="header-facebook" after="header-1">
               <arguments>
                   <argument name="block_id" xsi:type="string">header-facebook</argument>
               </arguments>
           </block>
       </container>
        </referenceContainer>
        <referenceContainer name="header-wrapper">
          <container htmlClass="header-social" htmlTag="div" name="header-3">
              <block class="Magento\Cms\Block\Block" name="header-twitter" after="header-2">
                  <arguments>
                      <argument name="block_id" xsi:type="string">header-twitter</argument>
                  </arguments>
              </block>
          </container>
           </referenceContainer>
           <referenceContainer name="header-wrapper">
             <container htmlClass="header-social" htmlTag="div" name="header-4">
                 <block class="Magento\Cms\Block\Block" name="header-instagram" after="header-3">
                     <arguments>
                         <argument name="block_id" xsi:type="string">header-instagram</argument>
                     </arguments>
                 </block>
             </container>
              </referenceContainer>

<move element="action.nav-toggle" destination="home-specials" after="header.panel" />
 <move element="breadcrumbs" destination="page.top" after="home-specials"/>


<referenceContainer name="footer">
<container htmlClass="footercontent" htmlTag="div" name="footer-1">
    <block class="Magento\Cms\Block\Block" name="footer_locations" after="-">
        <arguments>
            <argument name="block_id" xsi:type="string">footer_links</argument>
        </arguments>
    </block>
</container>
 </referenceContainer>
 <referenceContainer name="footer">
 <container htmlClass="footercontent" htmlTag="div" name="footer-2">
     <block class="Magento\Cms\Block\Block" name="footer_links" after="footer-1">
         <arguments>
             <argument name="block_id" xsi:type="string">footer_locations</argument>
         </arguments>
     </block>
 </container>
  </referenceContainer>
  <referenceContainer name="footer">
  <container htmlClass="footercontent" htmlTag="div" name="footer-3">
      <block class="Magento\Cms\Block\Block" name="footer_services" after="footer-2">
          <arguments>
              <argument name="block_id" xsi:type="string">footer_services</argument>
          </arguments>
      </block>
  </container>
   </referenceContainer>
   <referenceContainer name="footer">
   <container htmlClass="footercontent" htmlTag="div" name="footer-4">
       <block class="Magento\Cms\Block\Block" name="footer_reources" after="footer-3">
           <arguments>
               <argument name="block_id" xsi:type="string">footer_resources</argument>
           </arguments>
       </block>
   </container>
    </referenceContainer>
    <referenceContainer name="footer">
    <container htmlClass="footercontent" htmlTag="div" name="footer-5">
        <block class="Magento\Cms\Block\Block" name="footer_suppliers" after="footer-4">
            <arguments>
                <argument name="block_id" xsi:type="string">footer_suppliers</argument>
            </arguments>
        </block>
    </container>
     </referenceContainer>
     <referenceContainer name="footer">
     <container htmlClass="footercontent" htmlTag="div" name="footer-logo1">
         <block class="Magento\Cms\Block\Block" name="footer-logo" after="footer-5">
             <arguments>
                 <argument name="block_id" xsi:type="string">footer_logo</argument>
             </arguments>
         </block>
     </container>
      </referenceContainer>

      <referenceContainer name="footer-container">
    <container name="copyright" label="Page Footer" htmlTag="div" htmlClass="footercopyright">

      <block class="Magento\Cms\Block\Block" name="footer-copyright" after="footer-logo">
          <arguments>
              <argument name="block_id" xsi:type="string">footer_copyright</argument>
          </arguments>
      </block>


    </container>
</referenceContainer>
    </body>
</page>
